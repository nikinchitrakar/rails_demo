
<br>
<p id="notice"><%= notice %></p>  
<div class="container">
    <div class="row col-md-8 col-md-offset-2 custyle">
    <table class="table table-striped custab">
      <thead>
      
          <tr>
              <th>Title</th>
              <th>Details</th>
              <th>Username</th>
              <th class="text-center" colspan="3">Action</th>
          </tr>
      </thead>
      <tbody>
        <% @post_all.each do |post| %>
              <tr>
                  <td><%= post.title %></td>
                  <td><%= post.details %></td>
                  <td><%= post.user.username %></td>
                  
                  <td class="text-center"><a class='btn btn-info btn-xs'><span class="glyphicon glyphicon-open-file"></span><%= link_to 'Show', post %></a></td>
                  
                  <% if current_user.id == post.user.id %>
                  
                    <td class="text-center"><a class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span><%= link_to 'Edit', edit_post_path(post) %></a></td>
                    
                    <td class="text-center"><a class='btn btn-info btn-xs'><span class="glyphicon glyphicon-remove"></span><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
                  <% end %>
                  
                  
              </tr>
        <% end %>
      </tbody>        
    </table>
    </div>
</div>